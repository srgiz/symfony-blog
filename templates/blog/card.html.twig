{# templates/blog/card.html.twig #}
<div class="card card-row mb-4">
    <div class="card-body">
        <a class="d-block h4 text-decoration-none" href="{{ url('post', {'slug': post.slug}) }}">{{ post.title }}</a>
        <div class="mt-3">
            <div class="md-text">{% apply markdown_to_html %}{{ post.preview }}{% endapply %}</div>
            <a class="btn btn-outline-group" href="{{ url('post', {'slug': post.slug}) }}">Читать далее</a>
        </div>
    </div>
</div>
