{# templates/blog/post.html.twig #}
{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <div class="md-text">{% apply markdown_to_html %}{{ post.preview }}{% endapply %}</div>
    <div class="md-text">{% apply markdown_to_html %}{{ post.content }}{% endapply %}</div>
{% endblock %}
