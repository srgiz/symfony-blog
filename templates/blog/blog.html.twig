{# templates/blog/blog.html.twig #}
{% extends "base.html.twig" %}

{% block body %}
    <h1>Блог</h1>

    {% for post in blog.posts %}
        {% include 'blog/card.html.twig' with {'post': post} only %}
    {% endfor %}

    {% include 'paginate/paginate.html.twig' with {'route': 'blog', 'page': blog.page, 'total': blog.totalPages} only %}
{% endblock %}
